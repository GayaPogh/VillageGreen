{% extends 'base.html.twig' %}

{% block title %}
	Village Green
{% endblock %}

{% block body %}
	<!-- Bannière image -->
	<img src="{{ asset('images/banner.jpg') }}" alt="Bannière accueil" loading="lazy" class="img-fluid w-100" style="max-height: 600px; object-fit: cover;">

	<section class="container my-5 text-center">
		<h2 class="mb-4">Bienvenue sur
			<span class="text-success">Village Green</span>
			!</h2>
		<div class="row">

			<div class="col-6 col-md-3 mb-4">
				<i class="fas fa-credit-card fa-2x feature-icon mb-2"></i>
				<h6 class="fw-bold">2 millions d'articles</h6>
				<p class="text-muted">en stock</p>
			</div>

			<div class="col-6 col-md-3 mb-4">
				<i class="fas fa-warehouse fa-2x feature-icon mb-2"></i>
				<h6 class="fw-bold">Garantie 3 ans</h6>
				<p class="text-muted">sur tous les produits</p>
			</div>

			<div class="col-6 col-md-3 mb-4">
				<i class="fas fa-truck fa-2x feature-icon mb-2"></i>
				<h6 class="fw-bold">Livraison offerte</h6>
				<p class="text-muted">à partir de 199€ d'achat</p>
			</div>

			<div class="col-6 col-md-3 mb-4">
				<i class="fas fa-smile fa-2x feature-icon mb-2"></i>
				<h6 class="fw-bold">30 jours</h6>
				<p class="text-muted">satisfait ou remboursé</p>
			</div>

		</div>
	</section>

	<!-- Catégories -->
	<div class="container my-5">
		<h2 class="text-center mb-4">Catégories</h2>

		<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
			{% for categorie in categories %}
				<div class="col">
					<div class="card h-100 text-center shadow-sm">
						<img src="/images/categorie{{ loop.index }}.jpg" alt="Catégorie {{ categorie.nom }}" class="card-img-top" loading="lazy" style="width: 100%; height: 250px; object-fit: cover;">

						<div class="card-body">
							<h5 class="card-title">{{ categorie.nom }}</h5>
						</div>

						<div class="card-footer bg-success text-white">
							<a href="{{ path('categorie_show', { id: categorie.id }) }}" class="btn btn-outline-light btn-sm">
								Plus de détails
							</a>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>


	<!-- Promotions -->
	<div class="bg-light py-5">
		<div class="container">
			<h2 class="mb-4">Promotions</h2>
			<p>Découvrez nos offres spéciales et réductions exclusives !</p>
			<div class="row row-cols-1 row-cols-md-3 g-4">
				{% for i in 1..3 %}
					<div class="col">
						<div class="card h-100 text-center shadow-sm">
							<img src="/images/promo{{ i }}.jpg" alt="Promotion {{ i }}" class="card-img-top" loading="lazy" style="width: 100%; max-height: 250px; object-fit: cover;">
							<div class="card-body">
								<h5 class="card-title">Promotion
									{{ i }}</h5>
								<p class="card-text">Description de la promotion</p>
							</div>
							<div class="card-footer bg-white">
								<small class="text-muted">Voir l'offre</small>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
	<!-- Marques -->
	<div class="bg-warning py-5">
		<div class="container">
			<h2 class="mb-4">Marques</h2>
			<p>Explorez nos marques partenaires...</p>
		</div>
	</div>

	<!-- Quoi de neuf -->
	<div class="bg-warning-subtle py-5">
		<div class="container">
			<h2 class="mb-4">Meilleures Ventes</h2>
			<p>Les dernières nouveautés musicales sont ici !</p>
		</div>
	</div>
{% endblock %}
