{% extends 'base.html.twig' %}

{% block title %}
	{{ categorie.nom }}
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h2 class="text-center mb-4">Sous-catégories de
			{{ categorie.nom }}</h2>

		{% if sousCategories|length > 0 %}
			<div class="row row-cols-1 row-cols-md-3 g-4">
				{% for sousCategorie in sousCategories %}
					<div class="col">
						<div class="card h-100 shadow-sm text-center">
							<img src="/images/{{ sousCategorie.image ?? 'default.jpg' }}" alt="{{ sousCategorie.nom }}" class="card-img-top" style="height: 200px; object-fit: cover;">
							<div class="card-body">
								<h5 class="card-title">{{ sousCategorie.nom }}</h5>
								<a href="{{ path('souscategorie_show', {id: sousCategorie.id}) }}" class="btn btn-success mt-2">
									Voir les produits
								</a>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<p class="text-center">Aucune sous-catégorie disponible pour cette catégorie.</p>
		{% endif %}
		<div class="text-center mt-4">
			<a href="{{ path('app_accueil') }}" class="btn btn-outline-secondary">
				⬅ Retour à l'accueil
			</a>
		</div>

	</div>
{% endblock %}
